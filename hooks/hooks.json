{
  "description": "Claude-Mem C# hooks for persistent memory across sessions",
  "hooks": {
    "SessionStart": [{
      "matcher": "startup|clear|compact",
      "hooks": [{
        "type": "command",
        "command": "${CLAUDE_PLUGIN_ROOT}/plugin/scripts/context-hook.sh",
        "timeout": 300,
        "statusMessage": "Loading memory context..."
      }, {
        "type": "command",
        "command": "${CLAUDE_PLUGIN_ROOT}/plugin/scripts/user-message-hook.sh",
        "timeout": 10
      }]
    }],
    "UserPromptSubmit": [{
      "hooks": [{
        "type": "command",
        "command": "${CLAUDE_PLUGIN_ROOT}/plugin/scripts/new-hook.sh",
        "timeout": 120
      }]
    }],
    "PostToolUse": [{
      "matcher": "*",
      "hooks": [{
        "type": "command",
        "command": "${CLAUDE_PLUGIN_ROOT}/plugin/scripts/save-hook.sh",
        "timeout": 120
      }]
    }],
    "Stop": [{
      "hooks": [{
        "type": "command",
        "command": "${CLAUDE_PLUGIN_ROOT}/plugin/scripts/summary-hook.sh",
        "timeout": 120
      }]
    }],
    "SessionEnd": [{
      "hooks": [{
        "type": "command",
        "command": "${CLAUDE_PLUGIN_ROOT}/plugin/scripts/cleanup-hook.sh",
        "timeout": 120
      }]
    }]
  }
}
